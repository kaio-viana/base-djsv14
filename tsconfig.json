{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "./dist",
  },
  "include": ["./index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "src/templates"]
}